{
  "name": "craft-content",
  "description": "Craft Content is a CLI tool designed to generate Hugo website content from markdown files exported from the Craft application.",
  "version": "0.0.3",
  "license": "MIT",
  "main": "./dist/index.js",
  "bin": {
    "craft-content": "./dist/index.js"
  },
  "files": [
    "dist/index.js",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "dist": "node esbuild",
    "lint": "yarn lint:types && yarn lint:eslint",
    "lint:types": "tsc --noEmit --skipLibCheck",
    "lint:eslint": "eslint \"src/**\"",
    "link": "yarn global add file:$PWD",
    "test": "jest",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "prepare": "husky install"
  },
  "lint-staged": {
    "{*.ts,*tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@jest/globals": "29.5.0",
    "@types/fluent-ffmpeg": "2.1.21",
    "@types/gm": "1.25.1",
    "@types/node": "20.4.2",
    "@typescript-eslint/eslint-plugin": "6.1.0",
    "@typescript-eslint/parser": "6.1.0",
    "commander": "11.0.0",
    "esbuild": "0.18.15",
    "eslint": "8.45.0",
    "fluent-ffmpeg": "2.1.2",
    "gm": "1.25.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "lint-staged": "13.2.3",
    "prettier": "3.0.0",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "typescript": "5.1.6"
  }
}
